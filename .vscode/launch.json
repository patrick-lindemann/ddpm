{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Apply Noise",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apply_noise.py",
            "console": "integratedTerminal",
            "args": ["data/images/dog.png", "--schedule", "cosine"],
            "justMyCode": true
        },
        {
            "name": "Python: Train Denoiser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train_denoiser.py",
            "console": "integratedTerminal",
            "args": ["cifar10", "--batch-size", "16", "--epochs", "1", "--schedule", "cosine"],
            "justMyCode": true
        },
        {
            "name": "Python: Generate Images",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/generate_images.py",
            "console": "integratedTerminal",
            "args": ["out/train/1706115356_cifar10_cosine"],
            "justMyCode": true
        },
        {
            "name": "Python: Evaluate Images",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/evaluate_images.py",
            "console": "integratedTerminal",
            "args": ["out/generated7/1706115356_cifar10_cosine"],
            "justMyCode": true
        }
    ]
}
